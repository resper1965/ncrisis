# ========================================
# n.crisis - Environment Configuration
# ========================================

# ========================================
# CORE CONFIGURATION
# ========================================
NODE_ENV=production
PORT=5000
HOST=0.0.0.0

# ========================================
# DATABASE CONFIGURATION
# ========================================
DATABASE_URL=postgresql://ncrisis_user:ncrisis123456@localhost:5432/ncrisis

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379

# ========================================
# API KEYS (REQUIRED)
# ========================================
# OpenAI API Key (sk-...)
OPENAI_API_KEY=sk-proj-1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# SendGrid API Key (SG...)
SENDGRID_API_KEY=SG.1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://0.0.0.0:3000,http://0.0.0.0:5000,http://ncrisis.e-ness.com.br,http://auto.e-ness.com.br

# ========================================
# FILE UPLOAD CONFIGURATION
# ========================================
UPLOAD_DIR=./uploads
TMP_DIR=./tmp
MAX_FILE_SIZE=104857600

# ========================================
# SECURITY CONFIGURATION
# ========================================
# JWT Secret (32+ characters)
JWT_SECRET=your-super-secret-jwt-key-32-chars-minimum

# Session Secret (32+ characters)
SESSION_SECRET=your-super-secret-session-key-32-chars-minimum

# ========================================
# EMAIL CONFIGURATION
# ========================================
# From email address
EMAIL_FROM=noreply@ncrisis.e-ness.com.br

# Email templates directory
EMAIL_TEMPLATES_DIR=./templates/email

# ========================================
# LOGGING CONFIGURATION
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ========================================
# MONITORING CONFIGURATION
# ========================================
# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# ========================================
# AI/ML CONFIGURATION
# ========================================
# FAISS index path
FAISS_INDEX_PATH=./data/faiss-index

# Embeddings model
EMBEDDINGS_MODEL=text-embedding-ada-002

# ========================================
# INTEGRATION KEYS (OPTIONAL)
# ========================================
# Slack Webhook URL (https://hooks.slack.com/...)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T1234567890/B1234567890/1234567890abcdef1234567890

# Discord Webhook URL (https://discord.com/api/webhooks/...)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/1234567890/abcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef

# Telegram Bot Token (1234567890:ABCdefGHIjklMNOpqrsTUVwxyz)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# ========================================
# EXTERNAL SERVICES (OPTIONAL)
# ========================================
# VirusTotal API Key (32 characters)
VIRUSTOTAL_API_KEY=1234567890abcdef1234567890abcdef

# ClamAV Configuration
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# ========================================
# CACHE CONFIGURATION
# ========================================
# Cache TTL (seconds)
CACHE_TTL=3600

# ========================================
# RATE LIMITING
# ========================================
# Rate limit window (seconds)
RATE_LIMIT_WINDOW=900

# Rate limit max requests
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# BACKUP CONFIGURATION
# ========================================
# Backup directory
BACKUP_DIR=./backups

# Backup retention (days)
BACKUP_RETENTION_DAYS=30

# ========================================
# DEVELOPMENT ONLY (remove in production)
# ========================================
# Debug mode
DEBUG=false

# Auto-reload on file changes
AUTO_RELOAD=false

